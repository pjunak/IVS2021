<Window x:Class="Kalkulacka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulacka"
        mc:Ignorable="d"
		xmlns:Triedy="clr-namespace:Kalkulacka.Triedy"
		d:DataContext="{d:DesignInstance Triedy:MainWindowClass}"
        Title="Kalkulačka" Height="400" Width="200">

	<Window.DataContext>
		<Triedy:MainWindowClass/>
	</Window.DataContext>

	<Grid>
		<TextBox
			TextWrapping="Wrap"
			Text="{Binding Vstup, UpdateSourceTrigger=PropertyChanged}"
			Background="LightBlue"
			Foreground="Black" Margin="33,0,31,308"/>

	</Grid>
</Window>
